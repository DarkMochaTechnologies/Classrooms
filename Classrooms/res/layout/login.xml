<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg" >

    <ImageView
        android:id="@+id/homerow_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/classrooms_logo" />

    <EditText
        android:id="@+id/login_editText_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homerow_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/username"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/login_editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_editText_username"
        android:layout_below="@+id/login_editText_username"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_editText_password"
        android:layout_alignRight="@+id/login_editText_username"
        android:layout_below="@+id/login_editText_password"
        android:paddingTop="8dp"
        android:text="@string/login" />

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_button_login"
        android:layout_alignRight="@+id/login_button_login"
        android:layout_below="@+id/login_button_login"
        android:paddingTop="8dp"
        android:text="@string/register" />

</RelativeLayout>
