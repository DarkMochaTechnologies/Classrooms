<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#F1A9A0" >

    <ImageView
        android:id="@+id/homerow_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/classrooms_logo" />

    <EditText
        android:id="@+id/login_editText_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:background="@drawable/flat_selector_forms"
        android:layout_below="@+id/homerow_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="15"
        android:hint="@string/username" 
        android:layout_marginBottom="-6dp"/>
       <EditText
             android:id="@+id/login_line"
             android:layout_width="wrap_content"
             android:layout_height="1dp"
             android:ems="15"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/login_editText_username"
             android:background="#6C7A89"/>

    <EditText
        android:id="@+id/login_editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:background="@drawable/flat_selector_forms_bottom"
        android:layout_alignLeft="@+id/login_editText_username"
        android:layout_below="@+id/login_line"
        android:ems="15"
        android:hint="@string/password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:layout_alignLeft="@+id/login_editText_password"
        android:layout_alignRight="@+id/login_editText_username"
        android:layout_below="@+id/login_editText_password"
        android:text="@string/login"
        android:layout_marginTop="2dp" />

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:layout_alignLeft="@+id/login_button_login"
        android:layout_alignRight="@+id/login_button_login"
        android:layout_below="@+id/login_button_login"
        android:text="@string/register" 
        android:layout_marginTop="4dp"/>

</RelativeLayout>
