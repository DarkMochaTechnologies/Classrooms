<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:background="@drawable/profile_pic_background" >
    

	<TextView
		android:id="@+id/makePost_textView_classroom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:text="@string/name"
		android:layout_marginTop="30dp"
		android:textAppearance="?android:attr/textAppearanceLarge" />
		
	<TextView
		android:id="@+id/profile_textView_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/makePost_textView_classroom"
		android:layout_below="@+id/makePost_textView_classroom"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_marginBottom="20dp"
		android:text="@string/school"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="40dp"
	    android:layout_below="@+id/profile_textView_description"
	    android:orientation="horizontal" >

	        <Button
	            android:id="@+id/profile_button_makepost"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/flat_selector_post"
	            android:layout_weight="1"
	            android:text="@string/post" 
	            android:layout_marginRight="3dp"/>

	        <Button
	            android:id="@+id/profile_button_makeclassroom"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/flat_selector_classroom"
	            android:layout_weight="1"
	            android:text="@string/makeclassroom" />

	</LinearLayout>

</RelativeLayout>


