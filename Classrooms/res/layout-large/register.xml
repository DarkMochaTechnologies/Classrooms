<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  
    android:background="@drawable/bg" >

    <ImageView
        android:id="@+id/homerow_imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:adjustViewBounds="true"
		android:scaleType="centerCrop"
        android:src="@drawable/classrooms_logo" />

    <EditText
        android:id="@+id/register_editText_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homerow_imageView"
        android:background="@drawable/flat_selector_forms"
        android:layout_marginBottom="-6dp"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:hint="@string/username"
        android:paddingTop="8dp" >

    </EditText>
    
    <EditText
             android:id="@+id/register_line1"
             android:layout_width="wrap_content"
             android:layout_height="1dp"
             android:ems="15"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/register_editText_username"
             android:background="#6C7A89"/>

    <EditText
        android:id="@+id/register_editText_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_editText_username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/flat_selector_forms"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-7dp"
        android:ems="15"
        android:hint="@string/email"
        android:inputType="textWebEmailAddress" />
    
    <EditText
             android:id="@+id/register_line2"
             android:layout_width="wrap_content"
             android:layout_height="1dp"
             android:ems="15"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/register_editText_email"
             android:background="#6C7A89"/>

    <EditText
        android:id="@+id/register_editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_editText_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/flat_selector_forms_bottom"
        android:layout_marginTop="1dp"
        android:ems="15"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
		android:shadowColor="#22313F"
		android:shadowDx="1"
		android:shadowDy="3"
		android:shadowRadius="5"
        android:background="@drawable/flat_selector"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/register_editText_password"
        android:layout_alignRight="@+id/register_editText_password"
        android:layout_below="@+id/register_editText_password"
        android:text="@string/register" />

</RelativeLayout>
