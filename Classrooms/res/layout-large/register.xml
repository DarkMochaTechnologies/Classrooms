<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/login_bg" >

    <ImageView
            android:id="@+id/homerow_imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="193dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/classrooms_logo" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/register_editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homerow_imageView"
            android:background="@drawable/flat_selector_forms"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:hint="@string/username"
            android:textColorHint="#C0C0C0"
            android:paddingTop="8dp" >

    </EditText>



    <EditText
            android:id="@+id/register_editText_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_editText_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/flat_selector_forms"
            android:layout_alignLeft="@+id/login_editText_username"
            android:layout_alignRight="@+id/login_editText_username"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:ems="15"
            android:hint="@string/email"
            android:textColorHint="#C0C0C0"
            android:textColor="#FFFFFF"
            android:inputType="textWebEmailAddress" />



    <EditText
            android:id="@+id/register_editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_editText_email"
            android:layout_alignLeft="@+id/login_editText_username"
            android:layout_alignRight="@+id/login_editText_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/flat_selector_forms"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:ems="15"
            android:hint="@string/password"
            android:textColorHint="#C0C0C0"
            android:inputType="textPassword" />

    <Button
            android:id="@+id/register_button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:background="@drawable/flat_selector"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/register_editText_password"
            android:layout_alignRight="@+id/register_editText_password"
            android:layout_below="@+id/register_editText_password"
            android:text="@string/register" />

</RelativeLayout>
