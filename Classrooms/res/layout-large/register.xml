<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/login_bg" >

    <ImageView
            android:id="@+id/homerow_imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/classrooms_logo" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/register_editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homerow_imageView"
            android:background="@drawable/flat_selector_forms"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:hint="@string/username"
            android:textColorHint="#333333"
            android:paddingTop="8dp" >

    </EditText>



    <EditText
            android:id="@+id/register_editText_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_editText_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/flat_selector_forms"
            android:layout_alignLeft="@+id/login_editText_username"
            android:layout_alignRight="@+id/login_editText_username"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:ems="15"
            android:hint="@string/email"
            android:textColorHint="#333333"
            android:inputType="textWebEmailAddress" />



    <EditText
            android:id="@+id/register_editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_editText_email"
            android:layout_alignLeft="@+id/login_editText_username"
            android:layout_alignRight="@+id/login_editText_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/flat_selector_forms"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:ems="15"
            android:hint="@string/password"
            android:textColorHint="#333333"
            android:inputType="textPassword" />

    <ImageView
        android:id="@+id/register_imageView_profilepic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/register_editText_password"
        android:layout_below="@+id/register_editText_password"
        android:src="@drawable/ic_action_user" />

    <Button
        android:id="@+id/register_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_imageView_profilepic"
        android:layout_alignRight="@+id/register_editText_password"
        android:layout_below="@+id/register_imageView_profilepic"
        android:background="@drawable/flat_selector"
        android:text="@string/register"
        android:textColor="#000000" />

    <Button
        android:id="@+id/register_button_selectpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/register_editText_password"
        android:layout_alignTop="@+id/register_imageView_profilepic"
        android:layout_toRightOf="@+id/register_imageView_profilepic"
        android:background="@drawable/flat_selector"
        android:text="@string/choosepic"
        android:textColor="#000000" />

</RelativeLayout>
