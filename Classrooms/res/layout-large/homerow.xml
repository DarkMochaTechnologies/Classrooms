<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp" >
    
    <ImageView
        android:id="@+id/homerow_imageView_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background_art" 
        android:scaleType="fitXY" >"
        
    </ImageView>"
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="151dp"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
	
	    <TextView
	        android:id="@+id/homerow_textView_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="0dp"
	        android:paddingTop="10dp"
	        android:text="TextView"
	        android:textStyle="bold" 
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/homerow_textView_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/homerow_textView_name"
	        android:layout_below="@+id/homerow_textView_name"
	        android:layout_marginRight="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="0dp"
	        android:paddingTop="5dp"
	        android:text="TextView" 
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	</RelativeLayout>
</FrameLayout>