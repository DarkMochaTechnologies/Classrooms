<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
        >

    <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="185dp" >

        <ImageView
                android:id="@+id/classroomhome_imageView_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/background_math" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                    android:id="@+id/classroomhome_textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp"
                    android:text="Algebra"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                    android:id="@+id/classroomhome_textView_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/classroomhome_textView_name"
                    android:layout_below="@+id/classroomhome_textView_name"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingTop="5dp"
                    android:text="basic college algebra"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>
    </FrameLayout>

    <Button
            android:id="@+id/classroomhome_button_joinclassroom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout1"
            android:layout_centerHorizontal="true"
            android:text="@string/joinclassroom"
            android:textColor="#FFFFFF"
            android:shadowColor="#22313F"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:background="@drawable/flat_selector_post_create"
            android:ems="15" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/classroomhome_textView_joinclassroom"
            android:background="#FFFFFF"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/classroomhome_textView_description_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
                android:id="@+id/classroomhome_textView_description_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampledescription" />

        <EditText
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_editText_username"
                android:paddingTop="4dp"
                android:background="#6C7A89"/>

        <TextView
                android:id="@+id/classroomhome_textView_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Category : Math"
                android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>

</RelativeLayout>